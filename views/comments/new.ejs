<%- include("../partials/header")%>

<div class=" container">
    <div class="row" style="text-align:center;;">
    <h1>add new review in <%=rest.name%></h1>
    <div style="width: 30%; margin: 0 auto;">
    <div class="form-group">
      <form action="/restaurants/<%= rest._id%>/comments" method="POST">
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">REVIEW
        <textarea class="form-control" type="text" name="comment[text]" placeholder="text" required></textarea>
        </p>
        </div>
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">Ambience
        <input class="form-control" type="number" name="comment[ambience]" placeholder="text" min="0.5" max="5" step="0.1" required ></p>
        </div>
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">Food
        <input class="form-control" type="number" name="comment[food]" placeholder="text" min="0.5" max="5" step="0.1" required></p>
        </div>
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">Service
        <input class="form-control" type="number" name="comment[service]" placeholder="text" min="0.5" max="5" step="0.1" required></p>
        </div>
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">Value for money
        <input class="form-control" type="number" name="comment[valueformoney]" placeholder="text" min="0.5" max="5" step="0.1" required></p>
        </div>
        <div class="form-group" style="padding-top: 10px;"><p style="text-align: left;">Image
        <input class="form-control" type="text" name="comment[img]" placeholder="upload image"></p>
         </div>
        <div class="form-group">   
        <button class="btn btn-danger btn-large">Submit</button>
        </div>
    </form> 
    </div>    
    </div>
<script></script>
<%- include("../partials/footer")%>