<%- include("../partials/header") %>
<div class="box">
    <h1 style="margin: 1.5em 0;">LOGIN!</h1>
    <form action="/login" method="POST">    
        <div class="login">
            <i class="fa fa-envelope-o" aria-hidden="true" style="margin-right: 0.8em;"></i><input type="text" name="username" placeholder="username" required style="background-color:transparent;height: 2em;font-size: medium;color: darkred;">
        </div>
        <div class="login">
            <i class="fa fa-lock" aria-hidden="true" style="margin-right: 0.8em;"></i>
           <input type="password" name="password" id="pass" placeholder="password" minlength="8" required style="background-color:transparent;;height: 2em;font-size: medium;color: darkred;">
           <span class="eye" onclick="myfunction()" >
            <i id="hide1" class="fa fa-eye" aria-hidden="true"></i>
            <i id="hide2" class="fa fa-eye-slash" aria-hidden="true"></i>
           </span>
        </div>
        <div>
            <button style="width:30%;display:block;outline:none; margin:40px auto 20px;border:none;background-color:darkred ;font-weight: bolder;color: whitesmoke;border-radius: 1.5em;height: 2em;font-size:medium ;">LOGIN</button>
        </div>
        </form>
</div>

<script>
    function myfunction(){
        var x= document.getElementById("pass");
        var y= document.getElementById("hide1");
        var z= document.getElementById("hide2");
        if(x.type === "password"){
            x.type="text";
            y.style.display="block";
            z.style.display="none"
        }else{
            x.type="password";
            y.style.display="none";
            z.style.display="block"
        }
    }
</script>

